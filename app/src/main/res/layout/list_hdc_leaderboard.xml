<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_view_border"
        android:padding="5dp">

        <TextView
            android:id="@+id/list_gd_serial_no1"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="01" />


        <TextView
            android:id="@+id/list_gd_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"

            app:layout_constraintStart_toEndOf="@id/list_gd_serial_no1"
            app:layout_constraintTop_toTopOf="@id/list_gd_serial_no1"
            tools:text="Kiran Modha" />

        <TextView
            android:id="@+id/list_gd_days_count1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@id/list_gd_activity_count1"
            app:layout_constraintTop_toTopOf="@id/list_gd_serial_no1"
            tools:text="05" />

        <TextView
            android:id="@+id/list_gd_activity_count1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@id/list_gd_distance1"
            app:layout_constraintTop_toTopOf="@id/list_gd_serial_no1"
            tools:text="01" />

        <TextView
            android:id="@+id/list_gd_distance1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/list_gd_serial_no1"
            tools:text="12.1" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>